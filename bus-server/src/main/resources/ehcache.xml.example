<?xml version="1.0" encoding="UTF-8"?>
<ehcache
        updateCheck="false"
        dynamicConfig="true">

    <diskStore path="java.io.tmpdir" />

    <cache name="long-term"
           maxElementsInMemory="1000"
           timeToLiveSeconds="86400"
           eternal="false" />

    <cache name="short-term"
           maxElementsInMemory="1000"
           timeToLiveSeconds="70"
           eternal="false" />

</ehcache>